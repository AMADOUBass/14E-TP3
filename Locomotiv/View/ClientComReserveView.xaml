<Window x:Class="Locomotiv.View.ClientComReserveView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Réservation de wagons"
        Height="380"
        Width="420"
        Background="#F4F6F7">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#34495E"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="6" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Réservation de wagons"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Nombre de wagons :"
                       FontWeight="Bold"
                       Margin="0,0,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                     Width="140"
                     Text="{Binding WagonsToReserve, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="{Binding WagonsError}"
                       Foreground="Red"
                       FontSize="12"
                       Margin="0,2,0,10"/>

            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="Poids total (tonnes) :"
                       FontWeight="Bold"
                       Margin="0,0,10,0"/>
            <TextBox Grid.Row="3" Grid.Column="1"
                     Width="140"
                     Text="{Binding WeightToReserve, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Row="4" Grid.Column="1"
                       Text="{Binding WeightError}"
                       Foreground="Red"
                       FontSize="12"
                       Margin="0,2,0,10"/>

            <TextBlock Grid.Row="5" Grid.ColumnSpan="2"
                       Text="{Binding RestrictionText}"
                       Foreground="DarkRed"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"
                       Visibility="{Binding IsRestrictionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <CheckBox Grid.Row="6" Grid.ColumnSpan="2"
                      Content="J'accepte la restriction sur la marchandise"
                      IsChecked="{Binding RestrictionAccepted}"
                      Margin="0,0,0,0"
                      Visibility="{Binding IsRestrictionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <TextBlock Grid.Row="7" Grid.ColumnSpan="2"
                       Text="{Binding RestrictionError}"
                       Foreground="Red"
                       FontSize="12"
                       Margin="0,2,0,10"/>

            <Button Grid.Row="9" Grid.ColumnSpan="2"
                    Content="Confirmer"
                    HorizontalAlignment="Center"
                    Command="{Binding ConfirmReservationCommand}"
                    Margin="0,15,0,0"/>
        </Grid>
    </Border>
</Window>