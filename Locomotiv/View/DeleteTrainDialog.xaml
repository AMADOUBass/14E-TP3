<Window x:Class="Locomotiv.View.DeleteTrainDialog "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Locomotiv"
        xmlns:enumUtils="clr-namespace:Locomotiv.Utils.EnumUtils"
        Title="Ajouter un Train" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Choisissez une station:"/>
        <ComboBox x:Name="cmbStation"
                  DisplayMemberPath="Nom"
                  SelectedValuePath="Id"
                  SelectionChanged="cmbStation_SelectionChanged"
                  Margin="0,5"/>

        <TextBlock Text="Choisissez un train à supprimer:" Margin="0,10,0,0"/>
        <ComboBox x:Name="cmbTrain"
                  DisplayMemberPath="Nom"
                  SelectedValuePath="Id"
                  Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Supprimer" Click="BtnSupprimer_Click" Margin="0,0,10,0"/>
            <Button Content="Annuler" Click="BtnAnnuler_Click"/>
        </StackPanel>
    </StackPanel>
</Window>