<UserControl x:Class="Locomotiv.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Effet d'ombre -->
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="14"
                          ShadowDepth="3"
                          Direction="270"
                          Color="#88000000"/>

        <!-- Animation d'entrée -->
        <Storyboard x:Key="FadeInForm">
            <DoubleAnimation Storyboard.TargetName="LoginBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.7"/>
            <ThicknessAnimation Storyboard.TargetName="LoginBorder"
                                Storyboard.TargetProperty="Margin"
                                From="0,60,0,0" To="0,0,0,0" Duration="0:0:0.7"/>
        </Storyboard>

        <!-- Style du bouton principal (même thème que la sidebar) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#34495e"/>
            <Setter Property="BorderBrush" Value="#2c3e50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="260"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="10,4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d566e"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2c3e50"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInForm}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid Background="#2c3e50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="LoginBorder"
                Grid.Row="1"
                MaxWidth="520"
                Padding="40"
                Background="White"
                CornerRadius="14"
                BorderBrush="#34495e"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0"
                Margin="0,60,0,0"
                Effect="{StaticResource DropShadowEffect}">

            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock Text="Connexion"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#34495e"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <TextBlock Text="Nom d'utilisateur"
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="38"
                         MinWidth="260"
                         Margin="0,0,0,18"
                         Background="#ecf0f1"
                         BorderBrush="#bdc3c7"
                         FontSize="15"
                         Padding="8,4"/>

                <TextBlock Text="Mot de passe"
                           Foreground="#34495e"
                           FontSize="14"
                           Margin="0,0,0,5"/>

                <PasswordBox x:Name="PasswordBox"
                             Height="38"
                             MinWidth="260"
                             Margin="0,0,0,18"
                             Background="#ecf0f1"
                             BorderBrush="#bdc3c7"
                             FontSize="15"
                             Padding="8,4"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessages}"
                           Foreground="#e74c3c"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"
                           FontSize="12"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <Button Content="Se connecter"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
