<Window x:Class="Locomotiv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Locomotiv"
        mc:Ignorable="d"
        Title="Locomotiv"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1">

    <!-- =======================
         STYLES (hover improved)
         ======================= -->
    <Window.Resources>

        <!-- Style des boutons de navigation -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#34495e"/>
            <!-- Theme color -->
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- HOVER / PRESSED EFFECTS -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d566e"/>
                    <!-- lighter blue -->
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2c3e50"/>
                    <!-- darker -->
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Barre latérale -->
        <StackPanel Background="#2c3e50" Grid.Column="0" VerticalAlignment="Stretch">
            <TextBlock Text="Locomotiv"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="10"
                       HorizontalAlignment="Center"/>

            <!-- Accueil button (styled) -->
            <Button Content="Accueil"
                    Command="{Binding NavigateToHomeViewCommand}"
                    Style="{StaticResource NavButtonStyle}"/>

            <!-- Se connecter button (styled) -->
            <Button Content="Se connecter"
                    Command="{Binding NavigateToConnectUserViewCommand}"
                    Visibility="{Binding UserSessionService.IsUserDisconnected, Converter={StaticResource BoolToVisibilityConverter}}"
                    Style="{StaticResource NavButtonStyle}"/>

            <!-- Se déconnecter (red theme -> no style applied) -->
            <Button Content="Se déconnecter"
                    Margin="10"
                    Height="35"
                    Command="{Binding DisconnectCommand}"
                    Visibility="{Binding UserSessionService.IsUserConnected, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="#e74c3c"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Vue principale -->
        <ContentControl Grid.Column="1"
                        Content="{Binding NavigationService.CurrentView}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
    </Grid>
</Window>
