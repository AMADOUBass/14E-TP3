<Window x:Class="Locomotiv.View.TrainFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Locomotiv"
        xmlns:enumUtils="clr-namespace:Locomotiv.Utils.EnumUtils"
        Title="Ajouter un Train" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
            <Label Content="Nom:" Width="100"/>
            <TextBox x:Name="txtNom" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <Label Content="État:" Width="100"/>
            <ComboBox x:Name="cmbEtat" Width="250"
                      ItemsSource="{x:Static enumUtils:EtatTrainHelper.Valeurs}"
                      SelectedIndex="0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <Label Content="Capacité:" Width="100"/>
            <TextBox x:Name="txtCapacite" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
            <Label Content="Station ID:" Width="100"/>
            <ComboBox x:Name="cmbStation" Width="250"
                DisplayMemberPath="Nom"
                SelectedValuePath="Id"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Valider" Width="100" Click="BtnValider_Click"/>
            <Button Content="Annuler" Width="100" Margin="10,0,0,0" Click="BtnAnnuler_Click"/>
        </StackPanel>
    </Grid>
</Window>